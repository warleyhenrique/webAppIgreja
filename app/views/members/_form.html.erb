<div class="w3-row">
  <div class="w3-col l12">
    
    <%= form_for @member do |f| %>
        
      <div class="w3-row-padding">
        <div class="w3-col l12">
          
          <% if @member.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@member.errors.count, "errors") %> Proibiram esse membro de ser salvo:</h2>
              
              <% @member.errors.full_messages.each do |message| %>
                <div class="w3-panel w3-red w3-display-container w3-card-4">
                  <span onclick="this.parentElement.style.display='none'" class="w3-button w3-red w3-large w3-display-topright">Ã—</span>
                  <p><%= message %></p>
                </div>
              <% end %>
              
            </div>
          <% end %>
          
        </div>
      </div>
        
      <div class="w3-row-padding">
       
        <div class="w3-row-padding w3-margin-top-7">
          <div class="w3-col m9">
            <%= f.label :full_name %>
            <%= f.text_field :full_name, id: :member_full_name, :class=>"w3-input w3-border w3-round" %>
          </div>
        </div>
        
         <div class="w3-row-padding">
          <div class="w3-col m3">
            <%= f.label :baptism_date %>
            <%= f.date_field :baptism_date, id: :member_baptism_date, :class=>"w3-input w3-border w3-round" %>
          </div>
          <div class="w3-col m4">
            <%= f.label :kind_id %>
            <%= f.collection_select(:kind_id, @kinds_for_select, :id, :description, {}, {:class=>'w3-select w3-border w3-round'})%>
          </div>
        </div>
        
        <div class="w3-row-padding w3-margin-top-7">
          <div class="w3-col m3">
            <%= f.label :sex %>
            <%= f.select :sex, sex_for_select(@member.sex), {}, {:class=>'w3-input w3-border w3-round'} %>
          </div>
          <div class="w3-col m3">
            <%= f.label :birthday %>
            <%= f.date_field :birthday, id: :member_birthday, :class=>"w3-input w3-border w3-round" %>
          </div>
          <div class="w3-col m3">
            <%= f.label :marital_status %>
            <%= f.select :marital_status, marital_status_for_select(@member.marital_status), {}, {:class=>'w3-input w3-border w3-round'} %>
          </div>
        </div>
        
        <div class="w3-row-padding w3-margin-top-7">
          <div class="w3-col m4">
            <%= f.label :father_name %>
            <%= f.text_field :father_name, id: :member_father_name, :class=>"w3-input w3-border w3-round" %>
          </div>
      
          <div class="w3-col m5">
            <%= f.label :monther_name %>
            <%= f.text_field :monther_name, id: :member_monther_name, :class=>"w3-input w3-border w3-round" %>
          </div>
        </div>
       
        <div class="w3-row-padding w3-margin-top-7">
          <div class="w3-col m9">
            <%= f.label :email %>
            <%= f.email_field :email, id: :member_email, :class=>"w3-input w3-border w3-round" %>
          </div>
        </div>

        <div class="w3-row-padding w3-margin-top-7">
          <div class="w3-col m5">
            <%= f.label :schooling %>
            <%= f.select :schooling, schooling_for_select(@member.schooling), {}, {:class=>'w3-input w3-border w3-round'} %>
          </div>
          <div class="w3-col m4">
            <%= f.label :profession %>
            <%= f.text_field :profession, id: :member_profession, :class=>"w3-input w3-border w3-round" %>
          </div>
        </div>

        <div class="w3-row-padding w3-margin-top-7">
          <div class="w3-col m3">
            <%= f.label :cpf %>
            <%= f.text_field :cpf, id: :member_cpf, :class=>"w3-input w3-border w3-round" %>
          </div>
          <div class="w3-col m3">
            <%= f.label :rg %>
            <%= f.text_field :rg, id: :member_rg, :class=>"w3-input w3-border w3-round" %>
          </div>
          <div class="w3-col m3">
            <%= f.label :rg_emitter %>
            <%= f.text_field :rg_emitter, id: :member_rg_emitter, :class=>"w3-input w3-border w3-round" %>
          </div>
        </div>

        <br>
        
        <div class="w3-row-padding">
          <div class="w3-col actions">
            <%= f.submit class:"w3-btn w3-ripple w3-blue" %>
            <%= link_to 'Voltar', members_path, :class=>"w3-btn w3-ripple w3-red" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>