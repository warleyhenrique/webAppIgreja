<div class="w3-row">
  <div class="w3-col l12">
    
    <%= form_for @departament do |f| %>
        
      <div class="w3-row-padding">
        <div class="w3-col l12">
          
          <% if @departament.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@departament.errors.count, "errors") %> Proibiram esse membro de ser salvo:</h2>
              
              <% @departament.errors.full_messages.each do |message| %>
                <div class="w3-panel w3-red w3-display-container w3-card-4">
                  <span onclick="this.parentElement.style.display='none'" class="w3-button w3-red w3-large w3-display-topright">Ã—</span>
                  <p><%= message %></p>
                </div>
              <% end %>
              
            </div>
          <% end %>
          
        </div>
      </div>
        
      <div class="w3-row-padding">
       
        <div class="w3-row-padding w3-margin-top-7">
          <div class="w3-col m4">
            <%= f.label :name %>
            <%= f.text_field :name, id: :departament_name, :class=>"w3-input w3-border w3-round" %>
          </div>
        </div>
        
        <div class="w3-row-padding">
          <div class="w3-col m4">
            <%= f.label :rmk %>
            <%= f.text_field :rmk, id: :departament_rmk, :class=>"w3-input w3-border w3-round" %>
          </div>
        </div>
        <br>
        <div class="w3-row-padding">
          <div class="w3-col actions">
            <%= f.submit class:"w3-btn w3-ripple w3-blue" %>
            <%= link_to 'Voltar', departaments_path, :class=>"w3-btn w3-ripple w3-red" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>